{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {{ app.flashes|json_encode }}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in <small>or <a href="{{ path('security.register') }}">Register an account</a></small></h1>
        <label for="username">Username</label>
        <input type="text" value="{{ last_username }}" name="username" id="username" class="form-control" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>

        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>

    <a href="{{ path('password_reset.show_form') }}">Reset password</a>

    <div>
        <p>Social</p>

        <a href="{{ path('security.google_connect') }}">Google - Register | Login</a>
    </div>
{% endblock %}
