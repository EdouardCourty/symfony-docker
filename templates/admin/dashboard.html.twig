{% extends '@EasyAdmin/layout.html.twig' %}

{% block content_title %}Dashboard{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">Users</h5>
                            <h2 class="mt-2">{{ stats.users }}</h2>
                        </div>
                        <div>
                            <i class="fa fa-users fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="{{ ea_url().setController('App\\Controller\\Admin\\CRUD\\UserCrudController').setAction('index') }}" class="text-white text-decoration-none">
                        View users <i class="fa fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
